<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/orange_400</item>


        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>


    </style>

    <style name="Body">
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/blue_500</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
    </style>

    <style name="ToolbarPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/background_material_light</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>


